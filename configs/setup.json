{
    "description" : "Creates a Matrix style ascii effect for making logos.",
    "settings" : [
        {
            "flags" : "--config",
            "help" : "path to a json config file",
            "default" : null
        },
        {
            "flags" : "-c --color",
            "help" : "final output in color, not compatible with text output",
            "action" : "store_true",
            "default" : false
        },
        {
            "flags" : "-m --matrix",
            "help" : "final output in a matrix streak style",
            "action" : "store_true",
            "default" : false
        },
        {
            "flags" : "-i --invert",
            "help" : "inverts the image brightness",
            "action" : "store_true",
            "default" : false
        },
        {
            "flags" : "-t --transparent",
            "help" : "transparent background for image outputs",
            "action" : "store_true",
            "default" : false
        },
        {
            "flags" : "-o --output",
            "help" : "changes the output type",
            "choices" : ["terminal", "image", "text"],
            "default" : "terminal"
        },
        {
            "flags" : "-s --seed",
            "help" : "seed for random object, otherwise random seed",
            "default" : null
        },
        {
          "flags" : "--img_path",
          "help" : "image for logo, otherwise random ascii chars",
          "default" : null
        },
        {
            "flags" : "--matrix_dir",
            "help" : "the direction of the matrix effect",
            "choices" : ["vertical", "horizontal"],
            "default" : "vertical"
        },
        {
            "flags" : "--filename",
            "help" : "the name of the output file",
            "default" : null
        },
        {
            "flags" : "--output_folder",
            "help" : "the output location for image and text output e.g. \"files/\"",
            "default" : "files/"
        },
        {   
            "flags" : "--title_font",
            "help" : "the title font for image outputs",
            "default" : null
        },
        {
            "flags" : "--back_col",
            "help" : "legal rgb 3-tuple background color for image output e.g. (89,44,136)",
            "default" : "(30,30,30)"
        },
        {
            "flags" : "--text_col",
            "help" : "legal rgb 3-tuple text color when -c in not specified e.g. (89,44,136)",
            "default" : "(255,255,255)"
        },
        {
            "flags" : "--title_col",
            "help" : "legal rgb 3-tuple title color, only works with image output e.g. (89,44,136)",
            "default" : "(255,255,255)"
        },
        {   
            "flags" : "--title_pos",
            "help" : "the x,y position of titles for image outputs, 2-tuple e.g. (10,10)",
            "default" : "(10,10)"
        },
        {
            "flags" : "--title_text",
            "help" : "The text that is displayed as the title",
            "default" : null
        },
        {
            "flags" : "--title_size",
            "help" : "the size of the text strokes for the title",
            "default" : "6"
        },
        {
            "flags" : "--char_offset",
            "help" : "the x,y spacing between characters in image outputs, 2-tuple e.g. (10,10)",
            "default" : "(6,10)"
        },
        {
            "flags" : "--size",
            "help" : "the width of the ascii output",
            "default" : "100"
        },
        {
            "flags" : "--ascii_ramp",
            "help" : "ascii values to use light -> dark",
            "default" : " _-.,:;*$S#@"
        },
        {
            "flags" : "--contrast",
            "help" : "specify the contrast of the ascii art",
            "default" : "1"
        },
        {
            "flags" : "--brightness",
            "help" : "specify the brightness of the ascii art",
            "default" : "1"
        },
        {
            "flags" : "--height_adjust",
            "help" : "adjustment for ascii characters being rectangles",
            "default" : ".45"
        },
        {
            "flags" : "--streak_spacing",
            "help" : "spacing of streaks in the matrix",
            "default" : "50"
        },
        {
            "flags" : "--streak_length",
            "help" : "length of streaks in the matrix",
            "default" : "20"
        },
        {
            "flags" : "--streak_min",
            "help" : "smallest streak allowed must be positive and shorter than length and spacing",
            "default" : "10"
        }
    ]
}